                            <Label Text="Hamburger" 
                                   Style="{StaticResource LabelDefaultStyle}" 
                                   HorizontalTextAlignment="Center"/>
                            
                        </StackLayout>
                        
                    </Frame>
                    
                </Grid>

                    <Label Margin="20,10" 
